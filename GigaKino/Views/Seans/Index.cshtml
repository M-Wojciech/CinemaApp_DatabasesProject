@using GigaKino.ObjectsDTO
@model Tuple<SeansDTO, FilmDTO, SalaDTO, KinoDTO>
@{
    ViewData["Title"] = "Index";
}
@section Head{
    <meta name="viewport" content="width=device-width" />
    <title>GigaKino_bilety</title>
    <link href="https://fonts.googleapis.com/css2?family=Istok+Web&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/bilety_style.css">
}

<div class="movie-details">
    <img src="@Model.Item2.PosterPath" alt="Movie Poster" class="poster">
    <div class="details">
        <h2>@Model.Item2.Tytul</h2>
        <p class="opis">@Model.Item2.Gatunek | od @Model.Item2.Ogr_wiekowe lat | @Model.Item2.Dlugosc min</p>
        <p class="opis">@Model.Item1.Termin.ToString("dddd dd.MM.yyyy")<br>@Model.Item4.Nazwa, Sala @Model.Item3.Numer</p>
        <p class="seans">@Model.Item1.Termin.ToString("HH:mm"), @Model.Item1.Technologia, @Model.Item1.WersjaJezykowa</p>
    </div>
</div>
<div class="tickets">
    <h2>Wybierz bilet</h2>
    <div class="ticket-selector">
        <table>
            <thead>
                <tr>
                    <th>Rodzaj</th>
                    <th>Cena</th>
                    <th>Ilość</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><strong>NORMALNY</strong></td>
                    <td>@Model.Item1.CenaDomyslna zł</td>
                    <!--<td>29.90 zł</td>-->
                    <td>
                        <button class="quantity-btn">-</button>
                        <input type="text" value="1" class="quantity-input">
                        <button class="quantity-btn">+</button>
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>ULGOWY</strong>
                        <br>(Dziecko / Student / Senior / Weteran)
                    </td>
                    <td>25.90 zł</td>
                    <td>
                        <button class="quantity-btn">-</button>
                        <input type="text" value="1" class="quantity-input">
                        <button class="quantity-btn">+</button>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="buttons">
            <button class="back-btn">Wstecz</button>
            <button class="next-btn">Wybierz miejsca</button>
        </div>
    </div>
</div>