@model GigaKino.ViewModels.SalaViewModel
@{
    ViewData["Title"] = "Sala";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>GigaKino_bilety</title>
    <link href="https://fonts.googleapis.com/css2?family=Istok+Web&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/bilety_style.css">
    <script>
        function submitSelection() {
            const selectedSeats = [];
            document.querySelectorAll('.miejsce.wybrane').forEach(button => {
                selectedSeats.push({
                    rzad: button.getAttribute('data-rzad'),
                    kolumna: button.getAttribute('data-kolumna')
                });
            });

            // Ensure the number of selected seats matches the quantity
            if (selectedSeats.length !== @Model.Quantity) {
                alert('Wybierz odpowiednią liczbę miejsc.');
                return;
            }

            // Process selected seats, redirect, or submit via form
            console.log(selectedSeats);
        }

        document.querySelectorAll('.miejsce').forEach(button => {
            button.addEventListener('click', function () {
                if (this.classList.contains('zajete')) return;
                this.classList.toggle('wybrane');
            });
        });
    </script>
    <style>
        .sala-container {
            display: grid;
            gap: 10px;
            padding: 10px;
            justify-content: center;
            text-align: center;
        }

        .row {
            display: flex;
            justify-content: center;
            margin-bottom: 5px;
        }

        .miejsce {
            width: 30px;
            height: 30px;
            margin: 2px;
            border: none;
            border-radius: 5px;
            text-align: center;
            cursor: pointer;
        }

            .miejsce.wolne {
                background-color: green;
            }

            .miejsce.zajete {
                background-color: pink;
                cursor: not-allowed;
            }

            .miejsce.wybrane {
                background-color: gray;
            }

        .controls {
            margin-top: 20px;
            display: flex;
            justify-content: space-between;
        }

            .controls button {
                padding: 10px 20px;
                border: none;
                border-radius: 5px;
                background-color: #cc0000;
                color: white;
                cursor: pointer;
            }

                .controls button:hover {
                    background-color: #990000;
                }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <div class="text-container">
                <h1>GigaKino</h1>
            </div>
        </div>
        <ul>
            <li><a>Filmy</a></li>
            <li><a>Repertuar</a></li>
        </ul>
    </header>
    <h1>Wybierz miejsca</h1>
    <p>Wybrane bilety: @Model.Quantity</p>

    <div class="sala-container">
        @for (int rzad = 1; rzad <= Model.Miejsca.Max(m => m.Rzad); rzad++)
        {
            <div class="row">
                @for (int kolumna = 1; kolumna <= Model.Miejsca.Max(m => m.Kolumna); kolumna++)
                {
                    var miejsce = Model.Miejsca.FirstOrDefault(m => m.Rzad == rzad && m.Kolumna == kolumna);
                    if (miejsce != null)
                    {
                        <button class="miejsce @(Model.ZajeteMiejsca.Contains(miejsce.IdMiejsce) ? "zajete" : "wolne")"
                                data-rzad="@rzad" data-kolumna="@kolumna" @(Model.ZajeteMiejsca.Contains(miejsce.IdMiejsce) ? "disabled" : "")>
                            @rzad-@kolumna
                        </button>
                    }
                }
            </div>
        }
    </div>

    <div class="controls">
        <button onclick="history.back()">Wstecz</button>
        <button onclick="submitSelection()">Dalej</button>
    </div>
</body>
</html>