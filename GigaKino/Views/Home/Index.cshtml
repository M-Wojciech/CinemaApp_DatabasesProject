@model IEnumerable<GigaKino.ObjectsDTO.FilmDTO>
@{
    ViewData["Title"] = "Filmy";
}
<head>
    <style>
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Istok+Web&display=swap" rel="stylesheet">
    <script src="js/function.js" defer></script>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <header>
        <div class="container">
            <div class="text-container">
                <h1>GigaKino</h1>
            </div>
            <div class="dropdown">
                <button onclick="myFunction()" class="dropbtn">
                    <img src="img/Icons.png" alt="Icon">
                    KONTO
                </button>
                <div id="myDropdown" class="dropdown-content">
                    <a href="login.html">
                        <img src="img/Icons2.png" alt="Icon">
                        Logowanie
                    </a>
                    <a href="signup.html">
                        <img src="img/edit.png" alt="Icon">
                        Rejestracja
                    </a>
                </div>
            </div>
        </div>
        <ul>
            <li><a class="active">Filmy</a></li>
            <li><a href="repertuar.html">Repertuar</a></li>
        </ul>
    </header>
    <main class="outer-container">
        <div class="scrol">
            <div class="nav left">&#10094;</div>
            <div class="image-container">
                <img src="img/diuna-baner.jpeg" alt="Diuna" class="image">
                <div class="caption">DIUNA</div>
                <div class="indicators">
                    <div class="indicator active"></div>
                    <div class="indicator"></div>
                    <div class="indicator"></div>
                </div>
            </div>
            <div class="nav right">&#10095;</div>
        </div>

        <div class="repertoire">
            <h2>W Repertuarze</h2>
            <div class="movies">
                @if (Model != null && Model.Any())
                {
                    foreach (var film in Model)
                    {
                        <div class="movie">
                            @if (film.IdFilm == 1)
                            {
                                <img src="img/diuna.jpg" alt="Diuna">
                            }
                            else if (film.IdFilm == 2)
                            {
                                <img src="img/panda.jpg" alt="Kung Fu Panda 4">
                            }
                            else if (film.IdFilm == 3)
                            {
                                <img src="img/godzila.jpg" alt="Godzila">
                            }
                            <!--<img src="img/panda.jpg" alt="Kung Fu Panda 4">-->
                            <div class="movie-title">@film.Tytul</div>
                        </div>
                    }
                }
                else
                {
                    <p>Brak dostępnych filmów.</p>
                }
                <!--<div class="movie">
                    <img src="img/panda.jpg" alt="Kung Fu Panda 4">
                    <div class="movie-title">KUNG FU PANDA 4</div>
                </div>
                <div class="movie">
                    <img src="img/diuna.jpg" alt="Diuna: Część Druga">
                    <div class="movie-title">DIUNA: CZĘŚĆ DRUGA</div>
                </div>
                <div class="movie">
                    <img src="img/godzila.jpg" alt="Godzilla i Kong: Nowe Imperium">
                    <div class="movie-title">GODZILLA I KONG: NOWE IMPERIUM</div>
                </div>-->
            </div>
        </div>
    </main>
</body>