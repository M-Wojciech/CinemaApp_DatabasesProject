@model GigaKino.ViewModels.RegistrationViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<head>
    
    <meta charset="UTF-8">
    <title>GigaKino_Signup</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/signup_style.css">
    <style>
        .input-field input {
            padding: 10px;
            border: 1px solid #0D0D0D;
            border-radius: 12px;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <div class="header">
                <img src="~/img/edit.png" alt="Icon" class="icon">
                <h2>Zarejestruj się</h2>
            </div>
            <form asp-action="Register" asp-controller="Account" method="post">
                @Html.AntiForgeryToken()
                <div class="input-group-horizontal">
                    <div class="input-field">
                        <label asp-for="Imie"></label>
                        <input asp-for="Imie" />
                    </div>
                    <div class="input-field">
                        <label asp-for="Nazwisko"></label>
                        <input asp-for="Nazwisko" />
                    </div>
                </div>
                <div class="input-group">
                    <label asp-for="Mail"></label>
                    <input asp-for="Mail" type="email" />
                </div>
                <!--<div class="input-group-horizontal">
                    <div class="input-group">
                        <label asp-for="Typ"></label>
                        <input asp-for="Typ" />
                    </div>
                    <div class="input-group">
                        <label asp-for="Login"></label>
                        <input asp-for="Login" />
                    </div>
                </div>-->
                <!--<div class="input-group-horizontal">
                    <div class="input-field">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" type="password" />
                    </div>
                    <div class="input-field">
                        <label for="ConfirmPassword">Powtórz hasło</label>
                        <input id="ConfirmPassword" type="password" />
                    </div>
                </div>-->
                <div class="input-field">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" />
                </div>
                <p class="password-requirements">Hasło powinno zawierać: min. 8 znaków, liczbę, małą literę i wielką literę</p>
                <button type="submit" class="submit-btn">Załóż konto</button>
            </form>
        </div>
        <div class="image-container">
            <img src="~/img/kino.png" alt="Registration Illustration">
        </div>
    </div>
</body>
